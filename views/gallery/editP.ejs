<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card" style="background: #eeeeee">
                <div class="card-title text-center text-danger" id="name"> 
                    <br>                           
                   Edytuj zdjęcie główne do galerii <%= gallery.title %>
                   
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                            <div class="col-lg-12">
                                    
                                    <form action="/gallery/<%= gallery._id %>/edit/profile" method="post" enctype="multipart/form-data">
                                        
                                        
                                        <p class="info">Edytuj zdjęcie główne</p>
                                        <input type="file" name="profile">
                                        <br>
                                        <br>
                                        <div class="d-inline">
                                            <input type="submit" value="Edytuj zdjęcie główne" class="btn btn-outline-danger">
                                            <input type="reset" value="Wyczyść" class="btn btn-outline-danger">
                                        </div>
                                    </form>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

