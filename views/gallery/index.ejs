<%- include("../partials/header") %>
<br>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <p class="text-center text-danger" id="name">Galeria</p>
        </div>
    </div>
    <div class="row">
        <% if(galleries.length ===0){ %>
            <div class="col-lg-12">
                <div class="alert alert-info">
                    Nie dodaliśmy jeszcze żadnej galerii
                </div>
            </div>
        <% } else { %>
            <% for(let i=0;i<galleries.length;i++){ %>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card" style="background: #eeeeee">
                        <img src="<%= galleries[i].profile %>" alt="" class="card-img-top">
                        <div class="card-title info text-danger">                            
                            
                            <br>
                            <a href="/gallery/<%= galleries[i]._id %>" class="text-danger"><strong style="text-transform: uppercase;margin-left: 3%;"><%= galleries[i].title %></strong></a>
                        </div>
                        
                    </div>
                </div>
            <% } %>
        <% } %>
        
    </div>
        
    
</div>

<%- include("../partials/footer") %>